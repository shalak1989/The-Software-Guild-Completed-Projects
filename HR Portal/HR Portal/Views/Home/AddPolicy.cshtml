@model HR_Portal.Models.ViewModels.AddPolicyVM

@{
    ViewBag.Title = "Add Policy";
}

<h2>Policy Info</h2>

<div class="row">
    <div class="col-xs-12">
        <h3>Add Policy</h3>
        @Html.ActionLink("Return to Mangage Policies", "ManagePolicies", "Home")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(p => p.Policy.PolicyId)
            <div class="form-group">
                <label>Policy Name</label>
                @Html.TextBoxFor(p => p.Policy.Name, new { @class = "form-control", placeholder = "Policy Name" })
            </div>

            <div class="form-group">
                <label>Policy Content</label>
                @Html.TextBoxFor(p => p.Policy.PolicyText, new { @class = "form-control", placeholder = "Policy Text" })
            </div>

            <div styleclass="form-group" style="float:left; padding-right:5px;">
                <label>Category</label>
                @Html.DropDownListFor(p => p.Policy.Category.CategoryId, Model.CategoryItems)
            </div>
            <div style="float:left; padding-right:5px;">@Html.ActionLink("Add a Category", "AddCategory", "Home", null, new { @class = "btn btn-primary btn-xs" })</div>
            <br /><br />
            <p><button type="submit" class="btn btn-sm btn-primary">Save</button></p>
        }
    </div>
</div>      