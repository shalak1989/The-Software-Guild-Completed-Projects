@model IEnumerable<HR_Portal.Models.Data.PolicyVM>

@{
    ViewBag.Title = "ViewPolicies";
}

<h2>View Policies</h2>

<div class="col-xs-12 col-sm-9">
    <div class="row">
        <div class="col-xs-12">
            <h4>Policy List</h4>
            @*<p>@Html.ActionLink("Add a Student", "Add", "Student", null, new { @class = "btn btn-primary" })</p>*@
            
            <div class="form-group">
                <label>Policy Category:</label>
                @Html.DropDownListFor(p => p.First new { @class = "form-control" })
            </div>
            
            
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Policy ID</th>
                        <th>Category</th>
                        <th>Name</th>
                        <th>Description</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var policy in Model)
                    {
                        <tr>
                            <td>@policy.PolicyId</td>
                            <td>@policy.Category.CategoryName</td>
                            <td>@policy.Name</td>
                            <td>@policy.PolicyText</td>
                            @*<td>@Html.ActionLink("Edit", "Edit", "Student", new { id = student.StudentId }, null)</td>
                            <td>@Html.ActionLink("Delete", "DeleteStudent", "Student", new { id = student.StudentId }, null)</td>*@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

