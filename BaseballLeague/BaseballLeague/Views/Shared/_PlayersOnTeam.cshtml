@model List<BaseballLeague.Models.Player>

@{
    ViewBag.Title = "_PlayersOnTeam";
}

<table class="table table-bordered">
    <tbody>
        <tr>
            @for (int i = 0; i < Model.Count; i++)
            {
                <td id="playerCount">Players on Team @i: @Model.Count(t => t.TeamId == i)</td>
            }
            
        </tr>
    </tbody>

</table>


