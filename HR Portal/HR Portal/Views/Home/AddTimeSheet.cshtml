@model HR_Portal.Models.ViewModels.TimeSheetVM
@{
    ViewBag.Title = "AddTimeSheet";
}

<h2>Add Timesheet</h2>

<div class="row">
    <div class="col-xs-12">
        <h4>Timesheet Information</h4>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(t => t.TimeSheet.TimeSheetID)
            <div class="form-group">
                <label>Employee: </label>
                <select name="TimeSheet.EmpID" id="TimeSheet_EmpID">
                    @foreach (var employee in Model.EmployeesList)
                    {
                        <option value="@employee.Value">@employee.Text</option>
                    }
                </select>
            </div>

            <div class="input-group date" data-provide="datepicker">
                <b>Date: </b><input name="TimeSheet.TimeSubmitted" type="date" id="TimeSheet_TimeSubmitted" />
            </div>
            <br />


            <div class="form-group">
                <label>Hours Worked: </label>
                @Html.TextBoxFor(t => t.TimeSheet.HoursWorked, new { @class = "form-control", placeholder = "Enter hours worked..." })
                @Html.ValidationMessageFor(t => t.TimeSheet.HoursWorked)
            </div>

            <p><button type="submit" class="btn btn-sm btn-primary">Save</button></p>

        }
    </div>

</div>





