

<button type="button" class="btn btn-primary btn-lg" id="btnShowAddDVD">
    Add DVD
</button>

<!-- Modal -->
<div class="modal fade" id="addDVDModal" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Add DVD</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-6">
                        <h2>Create DVD</h2>
                        <div class="form-group">
                            <label>Title</label>
                            <input type="text" id="title" name ="titleInput"class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Director Name</label>
                            <input type="text" id="directorname" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Release Date</label>
                            <input type="text" id="releasedate" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>MPAA Rating</label>
                            <input type="text" id="mpaarating" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Studio</label>
                            <input type="text" id="studio" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>User Rating</label>
                            <input type="text" id="userrating" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>User Notes</label>
                            <input type="text" id="usernotes" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Actors</label>
                            <input type="text" id="actors" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="btnSaveDVD">Save</button>
            </div>
        </div>
    </div>
</div>
